<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

        <main class="container">
        <% include ../static/partials/messages.ejs %>
            <h1 class="display-3">New Wiki</h1>

            <form action="/wikis/create" method="post">
                <div class="form-group">
                    <label for="title">Wiki title</label>
                    <input type="text" class="title-input form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label for="headerImage">Header Image URL</label>
                    <small class="text-muted" id="headerImageHelp">Leave blank to use default image.</small>
                    <input type="text" class="url-input form-control" name="headerImage" aria-describedby="headerImageHelp" placeholder="Enter Header Image URL">
                </div>
                <div class="form-group">
                    <label for="profileImage">Profile Image URL</label>
                    <small class="text-muted" id="profileImageHelp">Leave blank to use default image.</small>
                    <input type="text" class="url-input form-control" name="profileImage" aria-describedby="profileImageHelp" placeholder="Enter Profile Image URL">
                </div>
                <div class="form-group">
                    <label for="body">Body</label>
                    <small class="text-muted" id="bodyHelp">You may use markdown syntax</small>
                    <textarea name="body" rows="20" class="form-control" placeholder="Body must be at least 10 characters in length."></textarea>
                </div>
                <% if(currentUser.role === 1 || currentUser.role === 2){ %>
                    <div class="form-group">
                        <label for="private">Set Private?</label>
                        <input type="radio" name="private" value="true" checked>Yes
                        <input type="radio" name="private" value="false">No
                    </div>
                <% } %>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>