<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

        <% include ../static/partials/messages.ejs %>

        <main class="container">
            <h1><%= wiki.title %></h1>
                <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
                <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            <p><%- body %></p>

            <div class="container">
                <h3>Collaborators</h3>
                <% if(currentUser && wiki.private && ((currentUser.role === 1 && currentUser.id === wiki.userId) || currentUser.role === 2)){ %>
                    <a href="/wikis/<%= wiki.id %>/collaborators/add" class="btn btn-warning">Add Collaborator</a>
                <% } %>
                <ul class="list-groups">
                    <li class="list-group-item">
                        <a href="#">Hello</a>
                    </li>
                </ul>
            </div>
        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>