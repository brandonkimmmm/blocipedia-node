<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>

        <% include ../static/partials/navbar.ejs %>
        <% include ../static/partials/messages.ejs %>

        <main class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-1">Sign in</h1>

                    <form action="/users/signin" method="post">

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="email-input form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="password-input form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
                        </div>

                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </form>
                </div>
            </div>
        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>