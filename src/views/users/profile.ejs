<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>

        <!-- Navigation -->
        <% include ../static/partials/navbar.ejs %>

        <!-- Page Content -->
        <main class="container">
            <h1 class="display-1 profile-title text-center"><%= `${result.user.username}'s profile` %></h1>
            <div class="row profile-header">
                <div class="col-lg-9 col-md-12">
                    <figure class="figure">
                        <img src="<%= result.user.profileImage %>" class="figure-img img-fluid rounded" alt="Profile Picture" style="height: 500px;">
                    </figure>
                </div>
                <div class="col-lg-3 col-md-12">
                    <p class="lead">Email: <%= result.user.email %></p>
                    <p class="lead">Member Since: <%= result.user.updatedAt.toString().substring(4, 15) %></p>
                </div>
            </div>
            <% if(result.wikis.length !== 0) { %>
                <h1 class="display-4 text-center"><%= `${result.user.username}'s Wikis` %></h1>
                <div class="row">
                    <div class="col-12">
                        <ul class="list-groups profile-wikis">
                            <li class="list-group-item">
                                <span>Title</span> <span class="float-right">Updated</span>
                            </li>
                            <% result.wikis.forEach((wiki) => { %>
                                <li class="list-group-item">
                                    <% if(wiki.private) { %>
                                        <i class="fas fa-lock"></i>
                                    <% } %>
                                    <a href="/wikis/<%= wiki.id %>"><%= wiki.title %></a>
                                    <span class="float-right"><%= wiki.updatedAt.toString().substring(4, 15) %></span>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            <% } %>
        </main>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>