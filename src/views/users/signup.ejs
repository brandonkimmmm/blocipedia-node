<!DOCTYPE htmll>
<html>
    <head>
    <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <% include ../static/partials/messages.ejs %>

        <main class="container">

            <h2>Sign Up</h2>
            <div class="row">
                <div class="col-md-8">
                    <form method="POST" action="/users/signup">
                        <div class="form-group">
                            <label for="title">Username:</label>
                            <input type="text" name="username" placeholder="Enter Username" class="form-control"/>
                            <small class="text-muted" id="titleHelp">username must be 4 or more characters in length and not being used.</small>
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" name="email" placeholder="Enter Email" class="form-control"/>
                            <small class="text-muted" id="titleHelp">email must be valid</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
                            <small class="text-muted" id="titleHelp">password must be 6 or more characters in length.</small>
                        </div>
                        <div class="form-group">
                            <label for="password_conf">Password Confirmation:</label>
                            <input type="password" name="password_conf" placeholder="Enter Password Confirmation" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="profileImage">Profile Image URL:</label>
                            <input type="text" name="profileImage" placeholder="Enter Image URL" class="form-control"/>
                            <small class="text-muted" id="titleHelp">leave blank to use default image</small>
                        </div>
                        <br/>
                        <input type="submit" value="Sign Up" class="btn btn-primary"/>
                    </form>
                </div>
            </div>
        </main>

        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>